{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="w-full min-h-svh flex justify-center items-center">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {
        attr: {'class': 'flex flex-col gap-5'}
    }) }}
        <h1>
            Faites votre inscription ici !
        </h1>
        <div class="flex flex-col gap-4">
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            <div class="flex items-center gap-3">
                {{ form_label(registrationForm.agreeTerms, null, {
                    label_attr: {'class': 'text-nowrap w-max mb-0'}
                }) }}
                {{ form_widget(registrationForm.agreeTerms, {
                    attr: {'class': 'w-10 h-10 '}
                }) }}
            </div>
        </div>

        <div class="w-full flex justify-end">
            {{ include('components/btn/button.html.twig', {'text':'Inscription'}) }}
        </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
