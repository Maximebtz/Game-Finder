    {# Partie gauche #}
    <div class="md:w-1/2 w-full md:h-dvh h-max flex justify-center items-center md:sticky top-0">
        <div class="flex flex-col items-center border rounded-xl w-max p-6 shadow-card">
            <div class="w-40 h-40 rounded-full flex items-center justify-center text-white text-6xl bg-purple">
                {{ app.user.username|slice(0, 1) }}
            </div>
            <div class="flex flex-col items-center">
                <p class="text-center text-2xl font-semibold mt-5">{{ app.user.username }}</p>
                <p class="text-center text-lg mt-2">{{ app.user.email }}</p>
                <div class="mt-5">
                    {{ include('components/btn/ancre.html.twig', {'text':'Modifier', 'path': path('user_edit')})}}
                </div>
            </div>
        </div>
    </div>
