                            </div>
                        <div class="flex flex-col items-center">
                            <p class="font-bold text-lg">{{ friend.followed.username }}</p>
                            {# <p class="text-sm text-zinc-500">{{ friend.games | length }} jeux en commun</p> #}
                        </div>
                    </div>
                    <div class="flex justify-between items-center mt-5">
                        <a href="{{ path('unfollow', {'id': friend.id}) }}" class="bg-red-500 rounded-xl py-2 px-4 w-full text-white text-center">Supprimer</a>
