{% extends 'base.html.twig' %}

{% block title %}Détail de {{game.name}}{% endblock %}

{% block body %}
<div class="flex justify-center min-h-dvh w-full md:p-20">
    <div class="flex flex-col h-max md:w-3/5  rounded-lg  shadow-card p-4">
        <div class="w-full h-80 rounded-lg overflow-hidden">
            <img class="w-full h-80 object-cover" src="{{game.thumbnail}}" alt="{{game.name}}">
        </div>
        <div class="flex flex-col gap-3 p-4 w-full">
            <h1>{{game.name}}</h1>
            <p>{{game.description|raw}}</p>
            <p><span class="font-bold">Min - Max:</span>  {{game.minPlayers}} - {{game.maxPlayers}} joueurs</p>
            <p><span class="font-bold">Âge:</span> {{game.minAge}} ans et +</p>
            <p><span class="font-bold">Temps de jeux:</span> {{game.playingTime}} minutes</p>
            <p><span class="font-bold">Temps minimum:</span> {{game.minPlayTime}} minutes</p>
            <p><span class="font-bold">Temps maximum:</span> {{game.maxPlayTime}} minutes</p>
        </div>
        <div class="w-full flex justify-end">
            {{ include('components/btn/ancre.html.twig', {'text': 'Créer un évènement', 'path': path('event_new', {'id': game.id})}) }}
        </div>
    </div>
</div>
{% endblock %}
