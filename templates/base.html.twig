<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script
                src="https://code.jquery.com/jquery-3.7.1.js"
                integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
                crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
        {{ render(controller(
            'App\\Controller\\FollowController::followList',
            { 'user': app.user }
        )) }}
        {% endif %}

        {% if app.request.get('_route') == 'app_home' %}
            {% include "components/nav-bar.html.twig" with {'home': 'block', 'profile': 'hidden', 'friends': 'hidden', 'games': 'hidden', 'events': 'hidden'} %}
        {% elseif app.request.get('_route') == 'user_profile' %}
            {% include "components/nav-bar.html.twig" with {'home': 'hidden', 'profile': 'block', 'friends': 'hidden', 'games': 'hidden', 'events': 'hidden'} %}
        {# {% elseif app.request.get('_route') == 'app_friends' %}
            {% include "components/nav-bar.html.twig" with {'home': 'hidden', 'profile': 'hidden', 'friends': 'block', 'games': 'hidden', 'events': 'hidden'} %}
        {% elseif app.request.get('_route') == 'app_games' %}
            {% include "components/nav-bar.html.twig" with {'home': 'hidden', 'profile': 'hidden', 'friends': 'hidden', 'games': 'block', 'events': 'hidden'} %}
        {% elseif app.request.get('_route') == 'app_events' %}
            {% include "components/nav-bar.html.twig" with {'home': 'hidden', 'profile': 'hidden', 'friends': 'hidden', 'games': 'hidden', 'events': 'block'} %}
        #}
        {% else %} 
            {% include "components/nav-bar.html.twig" with {'home': 'hidden', 'profile': 'hidden', 'friends': 'hidden', 'games': 'hidden', 'events': 'hidden'} %}
        {% endif %}
        
        <main class="ml-20 mr-[108px]">
            {{ render(controller(
                'App\\Controller\\InvitationController::headerSearch'
            )) }}
            {% block body %}
            
            {% endblock %}
        </main>
    </body>
</html>
